<div class="weatherWidget">
	{{#each part.weather.locations}}
	      <div class="location">
	      	<h3>{{name}}</h3>
	      	<a href="{{forecastUrl}}">
	      		<img src="{{iconUrl}}" alt="{{weather}}">
	      		{{wether}},{{temp}}
	      	</a>
	      </div>
	      {{/each}}
	      <small>Source: <a href="http://www.weather.com.cn"></a></small>
</div>